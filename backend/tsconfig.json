{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "ES2022",
        "lib": ["ES2022"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "types": ["bun-types"],
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}